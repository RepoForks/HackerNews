<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true"> <!-- CHECKED -->
<layer-list>

            <!-- This is the line -->
            <item><shape>
                    <solid android:color="@color/bright_accent" />
                </shape></item>
            <!-- This is the main color -->
            <item android:bottom="1.5dp" android:left="1.5dp" android:right="1.5dp" android:top="1.5dp"><shape android:shape="rectangle">
                    <solid android:color="@color/gray_17" />
                </shape></item>
        </layer-list></item>
    <item> <!-- DEFAULT -->
<layer-list>

            <!-- This is the line -->
            <item><shape>
                    <solid android:color="@color/gray_90" />
                </shape></item>
            <!-- This is the main color -->
            <item android:bottom="1.5dp" android:left="1.5dp" android:right="1.5dp" android:top="1.5dp"><shape android:shape="rectangle">
                    <solid android:color="@color/gray_17" />
                </shape></item>
        </layer-list></item>

</selector>