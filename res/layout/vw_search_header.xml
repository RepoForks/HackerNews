<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cnt_search_params"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp" >

        <com.airlocksoftware.holo.type.FontText
            android:id="@+id/txt_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6.66dp"
            android:text="@string/sort_by"
            android:textColor="?attr/textColorPrimary"
            android:textSize="14.66sp" />

        <com.airlocksoftware.holo.type.FontSpinner
            android:id="@+id/spin_sort"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?attr/bgSpinner"
            android:textColor="?attr/textColorPrimary"
            android:textColorHint="?attr/textColorTertiary"
            app:spinner_prompt="select sort" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp" >

        <com.airlocksoftware.holo.type.FontText
            android:id="@+id/txt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6.66dp"
            android:text="@string/search_type"
            android:textColor="?attr/textColorPrimary"
            android:textSize="14.66sp" />

        <com.airlocksoftware.holo.type.FontSpinner
            android:id="@+id/spin_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?attr/bgSpinner"
            android:textColor="?attr/textColorPrimary"
            android:textColorHint="?attr/textColorTertiary"
            app:spinner_prompt="select type" />
    </LinearLayout>

</LinearLayout>